{% extends '@TachigoUIModule/layout.html.twig' %}

{% block html_title %}图片轮播 -- Carousel{{ parent() }}{% endblock%}

{% block page_lead %}
    TUI 的 Carousel Javascript 组件。
{% endblock %}

{% block main %}
    <section>
        <h2 id="overview">示例</h2>
        <div class="td-example">
            <div id="carouselExample" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExample" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExample" data-slide-to="1"></li>
                    <li data-target="#carouselExample" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="{{ asset('img/width.jpg') }}" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>1st slide label</h5>
                            <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{ asset('img/width.jpg') }}" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>2nd slide label</h5>
                            <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{ asset('img/width.jpg') }}" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>3rd slide label</h5>
                            <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </section>
{% endblock %}