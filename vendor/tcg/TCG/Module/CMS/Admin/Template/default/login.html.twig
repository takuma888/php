{% extends '@TCGCMSModule/layout.html.twig' %}
{% block html_title %}管理员登录{{ parent() }}{% endblock %}
{% block body %}
    <div class="tui container-fluid">
        <div class="row">
            <div class="col-md-6">
                <form role="form" id="login-form" class="form form-signin" method="post" action="{{ url('admin_login') }}">
                    <div class="form-row">
                        <div class="col-md-12">
                            <h1>{{ parameters['site.name'] }} 管理员登录</h1>
                            {% include '@TCGTUIBundle/alert.html.twig' %}
                            <div class="tui-form-item">
                                <div class="tui-control">
                                    <input type="text" class="tui-input" name="username" id="username" placeholder="用户名">
                                </div>
                            </div>
                            <div class="tui-form-item">
                                <div class="tui-control">
                                    <input type="password" class="tui-input" name="password" id="password" placeholder="密码">
                                </div>
                            </div>
                            <button class="btn btn-primary btn-block" type="submit">登录</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}