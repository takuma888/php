<form class="tui modal-content" method="post" action="{{ url('dashboard.user.password', { id: user.id}) }}">
    <div class="modal-header">
        <h5 class="modal-title" id="user-edit-modal">
            <i class="fa fa-key"></i>&nbsp;重置后台用户登录密码
        </h5>
        <button type="button" class="close" data-dismiss="layer" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="tui-form-item">
            <label class="tui-label">登录密码</label>
            <div class="tui-control">
                <input type="password" name="password" class="tui-input">
            </div>
        </div>
        <div class="tui-form-item">
            <label class="tui-label">确认密码</label>
            <div class="tui-control">
                <input type="password" name="confirm_password" class="tui-input">
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary btn-sm">提交</button>
        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="layer">取消</button>
    </div>
</form>
